if [ -n "$1" ]; then
	case $1 in
	toggle)
		export DISPLAY=:0
		xset q|grep -qc 'Monitor is Off' && xset dpms force on || xset dpms force off
		;;
	*) echo 404; return $STATUSCODE;;
	esac
	# XXX output current state
	exit 0
fi

cat <<"HTML"
<div id="dpyctrl">
	<a href="/mod/dpyctrl toggle">Toggle</a>
</div>
HTML
