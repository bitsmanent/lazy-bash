if [ -n "$1" ]; then
	case $1 in
	up) amixer set Master 3%+ ;;
	down) amixer set Master 3%- ;;
	togglemute) amixer set Master toggle ;;
	*) echo 404; return $STATUSCODE;;
	esac
	# XXX output volume and mute status
	exit 0
fi

cat <<"HTML"
<div id="volctrl">
	<h2>Volume</h2>
	<div>
		<a href="/mod/volctrl up">Vol up</a>
		<a href="/mod/volctrl down">Vol down</a>
		<a href="/mod/volctrl togglemute">Toggle mute</a>
	</div>
</div>
HTML
